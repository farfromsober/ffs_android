<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="StyledIndicators" parent="AppTheme">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/paleOrange</item>
        <item name="pageColor">@color/white</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>

    <style name="navigation_header_main_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/nav_drawer_header_text_color</item>
    </style>

    <style name="navigation_header_secondary_text_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/nav_drawer_header_text_color</item>
    </style>

    <style name="drawer_item_text_style">
        <item name="android:textSize">22sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/drawer_menu_item_text_color_selector</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="product_list_name">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/app_grey</item>
    </style>
    <style name="product_list_price">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/app_grey</item>
    </style>

    <!-- Product detail -->
    <style name="product_detail_username_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/product_detail_username_text_color</item>
    </style>
    <style name="product_detail_date_text_style">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/product_detail_date_text_color</item>
    </style>
    <style name="product_detail_price_text_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/product_detail_price_text_color</item>
    </style>
    <style name="product_detail_title_text_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/product_detail_title_text_color</item>
    </style>
    <style name="product_detail_description_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/product_detail_description_text_color</item>
    </style>

    <style name="light_orange_background">
        <item name="android:background">@color/app_light_orange</item>
    </style>

    <style name="app_edit_text">
        <item name="android:textColorHint">@color/app_light_text</item>
        <item name="android:textColor">@color/app_dark_text</item>
    </style>

    <style name="app_button">
        <item name="android:background">@color/app_dark_orange</item>
        <item name="android:textColor">@color/app_light_text</item>
    </style>

    <style name="detail_product_rounded_button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/pale_orange_rounded_corners_view</item>
    </style>


</resources>
