<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="navigation_header_main_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/nav_drawer_header_text_color</item>
    </style>

    <style name="navigation_header_secondary_text_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/nav_drawer_header_text_color</item>
    </style>

    <style name="drawer_item_text_style">
        <item name="android:textSize">22sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/drawer_menu_item_text_color_selector</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
