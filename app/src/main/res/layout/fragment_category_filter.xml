<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ffs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <com.farfromsober.customviews.CustomFontTextView
        android:id="@+id/direction_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/nav_drawer_item_background_on"
        android:padding="5dp"
        android:text="@string/section_header_categories"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center_horizontal|center_vertical"
        ffs:fontName="Raleway-Regular.ttf"/>

    <ListView
        android:id="@+id/categoryList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice">
    </ListView>

    <com.farfromsober.customviews.CustomFontTextView
        android:id="@+id/direction_label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/nav_drawer_item_background_on"
        android:padding="5dp"
        android:text="@string/section_header_distances"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center_horizontal|center_vertical"
        ffs:fontName="Raleway-Regular.ttf"/>

    <ListView
        android:id="@+id/distanceList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice">
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>