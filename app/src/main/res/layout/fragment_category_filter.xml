<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ffs="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


<ScrollView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/linear_button"
            android:fillViewport="true"
    >

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.farfromsober.ffs.activities.LoginActivity"
              style="@style/light_orange_background"
    >


    <TextView
        android:id="@+id/direction_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="#fcb797"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="CategorÃ­as"
        android:textColor="#FFFFFF"
        android:textSize="13dip" />

    <ListView
        android:id="@+id/categoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice">
    </ListView>


    <TextView
        android:id="@+id/direction_label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fcb797"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Distancia"
        android:textColor="#FFFFFF"
        android:textSize="13dip" />

    <ListView
        android:id="@+id/distanceList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice">
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TextView>



</LinearLayout>
</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_light_orange"
        android:id="@+id/linear_button"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <com.farfromsober.customviews.CustomFontButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_submit"
            ffs:fontName="Raleway-Bold.ttf"
            android:id="@+id/filter1_submit"
            android:gravity="center"
            android:padding="10dp"
            style="@style/app_button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>



</RelativeLayout>