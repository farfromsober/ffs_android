<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ffs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/drawer_menu_item_background_color_selector">

    <ImageView
        android:duplicateParentState="true"
        android:id="@+id/menu_item_icon"
        android:layout_width="@dimen/drawer_menu_icon_width"
        android:layout_height="@dimen/drawer_menu_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        tools:src="@drawable/loading_icon"
        android:scaleType="fitXY"
        android:contentDescription="@string/navigation_drawer_item_icon_content_description"/>

    <com.farfromsober.customviews.CustomFontTextView
        android:duplicateParentState="true"
        android:id="@+id/menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/menu_item_icon"
        android:layout_toRightOf="@id/menu_item_icon"
        ffs:fontName="Raleway-Regular.ttf"
        tools:text="@string/drawer_item_example_text"
        style="@style/drawer_item_text_style"/>
</RelativeLayout>