<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/loading_group"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imq="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loading_alert_full_background"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_background_shape">

        <ImageView
            android:id="@+id/loading_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/loading_icon"
            android:layout_gravity="center_horizontal"/>

        <com.farfromsober.customviews.CustomFontTextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            imq:fontName="Raleway-Light.ttf"
            android:textColor="@color/loading_alert_text"
            android:textSize="17sp"
            tools:text="@string/loading_mock_text"/>

    </LinearLayout>

</RelativeLayout>